<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <!-- 低栏RadioButton的样式 -->
    
   <style name="main_tab_bottom">
        <item name="android:textColor">@drawable/btn_tab_text_selector</item>
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>
   
   <style name="TopbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/drawable_topbar_bg</item>
    </style>
   
   <!-- 筛选菜单ToggleButton -->
    <style name="FilterToggleButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/btn_order_ellipse</item>
    </style>
   
    
</resources>
