<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".KnowledgeActivity">

    <RelativeLayout
      android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_topbar"
         
        >
         <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="小知识"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
         </TextView>
           
         <ImageView
        android:id="@+id/iv_search"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/lib_story_img_search_bt"
        />
       </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/background_know"
        >
        <ImageView
            android:id="@+id/iv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/man" />
        <Button
            android:id="@+id/btn_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:button="@null" />

        <Button
            android:id="@+id/btn_brest"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:background="#00000000"
            android:button="@null" />


        <Button

            android:id="@+id/btn_hand1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="90dp"
            android:background="#00000000"
            android:button="@null" />

        <Button

            android:id="@+id/btn_hand2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="240dp"
            android:background="#00000000"
            android:button="@null" />


        <Button
            android:id="@+id/btn_buttom"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="#00000000"
            android:button="@null" />

        <Button
            android:id="@+id/btn_foot"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:background="#00000000"
            android:button="@null" />

        <Button
            android:id="@+id/btn_sex_man"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/bg_sex_man"
            android:button="@null" />

        <Button
            android:id="@+id/btn_sex_women"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/bg_sex_feman"
            android:button="@null" />

        <Button
            android:id="@+id/btn_sex_child"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/ico_home_user_1"
            android:button="@null" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#818181"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="点击人体的具体位置查看信息"/>

        <Button
            android:id="@+id/btn_remind"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/jiantou"
            android:button="@null" />
    </FrameLayout>
</LinearLayout><!-- From: file:/F:/studio/TestChar/救在你身边/src/main/res/layout/activity_knowledge.xml -->