<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
       
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg1"
    >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您的建议:"
        android:layout_margin="15dp"
        android:textColor="#a000"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/tv_advice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="18sp"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:hint="请输入您的意见和建议，以帮助我们更好的改进产品。"
        android:background="@drawable/background_corners"
        android:textColor="#000"
         />
    <LinearLayout
    android:layout_marginTop="5dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
     >
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式："
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textColor="#a000"
        android:textSize="18sp"/>
      <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="手机/固话"
        android:entries="@array/tongxin"
        android:gravity="center"
       android:layout_gravity="center"
        android:textColor="#a000"
        android:textSize="18sp"/>
      </LinearLayout>
      <EditText
       android:id="@+id/et_phone"
       android:layout_width="match_parent"
       android:layout_height="45dip"
       android:layout_marginTop="5dip"
       android:hint="请输入您的联系方式。"
       android:maxLength="30"
       android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
       android:textColorHighlight="#7e4d84"
       android:textColor="#000"
       android:ellipsize="end"
       android:layout_gravity="center"
       android:gravity="center_vertical"
       android:background="@drawable/txtborder"
      android:paddingRight="2dp"/>
      <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置分类:"
        android:layout_margin="15dp"
        android:textColor="#a000"
        android:textSize="18sp"/>
      <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="默认"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:entries="@array/fankui"
        android:gravity="center_vertical"
       
        android:textColor="#a000"
        android:textSize="18sp"/>
      <LinearLayout
    android:layout_marginTop="5dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" 
     >
      <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="清除"
        
        android:layout_marginLeft="50dp"
        android:textColor="#000"
        android:textSize="18sp"/>
      <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="提交"
        
        android:layout_marginRight="50dp"
        android:textColor="#000"
        android:textSize="18sp"/>
      </LinearLayout>
      
   </LinearLayout>       
          
      
</LinearLayout>
